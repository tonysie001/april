<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="YB">
<!-- 打开浏览器 -->
	<test name="open">
		<classes>
			<class name="com.cases.BrowserCase">
			<methods >
					<include name="openBrowser"></include>
					<exclude name="closeBrowser"></exclude>
				</methods>
			</class>
		</classes>
	</test>
<!-- 学生登录登录 -->	
	<test name="login">
		<classes>
			<class name="com.cases.LoginCase">
				<methods>
					<include name="testStuLogin"></include>
				</methods>
			</class>
		</classes>
	</test>
	
	<!-- 打开加入新书 -->	

	<test name="openAddBook">
		<classes>
			<class name="com.cases.AddBookCase">
				<methods>
					<include name="testOpenBook"></include>
				</methods>
			</class>
		</classes>
	</test>
	
	<!-- 发表留言  -->	

	<test name="messageText">
		<classes>
			<class name="com.cases.MessageCase">
				<methods>
					<include name="testCreateMessage"></include>
				</methods>
			</class>
		</classes>
	</test>	

	<!-- 注销 -->
	<test name="logout">
		<classes>
			<class name="com.cases.LoginCase">
				<methods>
					<include name="testLogout"></include>
				</methods>
			</class>
		</classes>
	</test>
<!-- 关闭浏览器 -->
		<test name="close">
		<classes>
			<class name="com.cases.BrowserCase">
				<methods >
					<include name="closeBrowser"></include>
					<exclude name="openBrowser"></exclude>
				</methods>
			</class>
		</classes>
	</test>
</suite> 